@model Testimonial
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Name</h2>
<form asp-controller="Admin" asp-action="TestimonialEdit" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <div class="form-group">
        @if (Model.ImageData != null)
        {
            <img src="@Model.ImageData.GetImageURL()" width="230" height="140" />
        }
        <label for="formFile" class="form-label">Current Image</label>
        <input class="form-control" type="file" id="file" name="file">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <textarea class="form-control" asp-for="Date"></textarea>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea class="form-control" asp-for="Text" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>