@model Information

<h2>Editing @Model.Title</h2>


<form asp-controller="Admin" asp-action="InformationEdit" method="post" enctype="multipart/form-data">
    <input hidden asp-route-slug="Slug" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <textarea class="form-control" asp-for="Slug"></textarea>
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">Short Description</label>
        <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea class="form-control mceEditor" id="textarea" asp-for="Text" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts
    {
    <script src="~/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/JavaScript.js"></script>
    }
