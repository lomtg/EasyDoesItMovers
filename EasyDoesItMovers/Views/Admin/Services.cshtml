@model Information

<h2>Editing @Model.Title</h2>

<form asp-controller="Admin" asp-action="TeamEdit" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Slug" />
    <div class="form-group">
        <label asp-for="Title">Name</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Position</label>
        <textarea class="form-control" asp-for="Slug"></textarea>
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">ShortDescription</label>
        <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <textarea class="form-control" id="Textarea" asp-for="Text" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>