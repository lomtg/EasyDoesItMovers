@{
    Layout = null;
}
@model Team

<form asp-controller="Create" asp-action="Team" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" id="file" name="file" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position">ShortDescription</label>
        <textarea class="form-control" asp-for="Position"></textarea>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">ShortDescription</label>
        <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">ShortDescription</label>
        <textarea class="form-control" asp-for="Text" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <button type="submit">Submit Form</button>
</form>

@if (Model != null)
{
    <h1>@Model.Name</h1>
    <h1>@Model.Position</h1>
    <h1>@Model.ShortDescription</h1>
    <h1>@Model.Text</h1>
    <img src="@ViewBag.ImageDataURL" />
}
